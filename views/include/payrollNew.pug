//Update Modal
#payrollModalNew.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title Employee Payroll Update
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        .form-group
          label(for='department') Department          
          select#departmentNew.departmentPayNew-select2.form-control(name='department', style='width: 465px', required)
            option(value="-1" selected="selected") Select Department
            option(value="Admin") Admin
            option(value="Accounts") Accounts
            option(value="HR") HR
            option(value="Development") Development
            option(value="Sales") Sales
            option(value="Collection") Collection
            option(value="Trainee Intern") Trainee Intern
            option(value="Customer Service Executive") Customer Service Executive 
        .form-group
          label(for='role') Role
          select#rolePayNew.rolePayNew-select2.form-control(name='role', style='width: 465px')
            option(value="-1" selected="selected") Select Role
        .form-check.form-check-inline
          input#days.form-check-input(type='radio' name='inlineRadioOptions' value='days' checked)
          label.form-check-label(for='inlineRadio1') Days
        .form-check.form-check-inline
          input#monthNew.form-check-input(type='radio' name='inlineRadioOptions' value='month')
          label.form-check-label(for='inlineRadio2') Month
        .form-check.form-check-inline
          input#year.form-check-input(type='radio' name='inlineRadioOptions' value='year' )
          label.form-check-label(for='inlineRadio3') Year 
        .form-group
          select#monthViewNew.month-select2.form-control(name='monthView', style='width: 465px', required)
            option(value="-1" selected="selected") Select Month
            option(value="1") January
            option(value="2") February
            option(value="3") March
            option(value="4") April
            option(value="5") May
            option(value="6") June
            option(value="7") July
            option(value="8") August
            option(value="9") September
            option(value="10") October
            option(value="11") November
            option(value="12") December
        .form-group
          label(for='dayCount') No. of Days
          input#dayCountNew.dayCount.form-control(type='text', name='dayCount', style='width: 465px', placeholder='No. of Day')
        .form-group
          label(for='amountPay') Amount Payable
          input#amountPayableNew.form-control(type='text', name='Amount Payable', placeholder='Amount Payable')
        .form-group
          label(for='totalAmount')  Total Amount
          input#totalAmountNew.form-control(type='text', name='totalAmount', placeholder='Total Amount', disabled)
      .modal-footer
        input#checkReset(type='checkbox' data-toggle='toggle' data-on='Reset ok' data-off='Reset' data-onstyle='success' data-offstyle='danger')
        button.btn.btn-warning(type='submit' data-bs-dismiss='modal')
          | Close
        button#addPayrollNew.btn.btn-info(type='submit')
          | Update
