//Update Modal
#employeeModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title Employee Profile Update
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        .form-group
          input#id(type='hidden' name='id')
          label(for='firstname') First Name
          input#firstname.form-control(type='text' name='firstname' placeholder='First Name' required)
        .form-group
          label(for='lastname') Last Name
          input#lastname.form-control(type='text' name='lastname' placeholder='Last Name' required)
        .form-group
          label.form-label(for='email') Email address
          input#email.form-control(type='email' name='email' placeholder='name@example.com' required)
        .form-group
          label(for='phonenumber') Phone Number
          input#phonenumber.form-control(type='text' name='phonenumber' placeholder='Phone Number' required)
        .form-group
          label(for='department') Department
          select#departmentEmployeeAdd.department-select2.form-control(name='department' required)
            option(value="-1" selected="selected") Select Department
            option(value="Admin") Admin
            option(value="Accounts") Accounts
            option(value="HR") Human Resource
            option(value="Development") Development
            option(value="Sales") Sales
            option(value="Collection") Collection
            option(value="Trainee") Trainee Intern
            option(value="CustomerServiceExecutive") Customer Service Executive            
        .form-group
          label(for='role') Role
          select#roleEmployeeEdit.roleEdit-select2.form-control(name='role')
            option(value="-1" ) Select Role
        .form-group
          label(for='permanentAddress') Permanent Address
          textarea#permanentAddressEdit.permanentAddress.form-control(name='permanentAddress')
        .form-group
        label(for='sameAddress')
          input#checkboxSameEdit(type="checkbox" name="checkbox")
          |  Check For Same Address
        .form-group
          label(for='currentAddress') Current Address
          textarea#currentAddressEdit.currentAddress.form-control(name='currentAddress')
      .modal-footer
        button.btn.btn-warning(type='button' data-bs-dismiss='modal')
          | Close
        button#edit_submit.btn.btn-info(type='submit')
          | Update
//Add Modal
#employeeModalAdd.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel1' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5#exampleModalLabel1.modal-title Add New Employee
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        .form-group
          label(for='firstNameAdd') First Name
          input#firstNameAdd.form-control(type='text' name='firstNameAdd' placeholder='First Name' required)
        .form-group
          label(for='lastname_add') Last Name
          input#lastNameAdd.form-control(type='text' name='lastNameAdd' placeholder='Last Name' required)
        .form-group
          label.form-label(for='emailAdd') Email address
          input#emailAdd.form-control(type='email' name='emailAdd' placeholder='name@example.com' required)
        .form-group
          label(for='phonenumber_add') Phone Number
          input#phoneNumberAdd.form-control(type='text' name='phoneNumberAdd' placeholder='Phone Number' required)
        .form-group
          label(for='department') Department
          select#departmentEmployeeAdd.department-select2.form-control(name='department' required)
            option(value="-1" selected="selected") Select Department
            option(value="Admin") Admin
            option(value="Accounts") Accounts
            option(value="HR") HR
            option(value="Development") Development
            option(value="Sales") Sales
            option(value="Collection") Collection
            option(value="Trainee") Trainee Intern
            option(value="CustomerServiceExecutive") Customer Service Executive            
        .form-group
          label(for='role') Role
          select#roleEmployeeAdd.role-select2.form-control(name='role')
            option(value="-1" selected="selected") Select Role
        .form-group
          label(for='permanentAddress') Permanent Address
          textarea#permanentAddress.permanentAddress.form-control(name='permanentAddress')
        .form-group
        label(for='sameAddress')
          input#employeeAddCheck(type="checkbox" name="checkbox")
          |  Check For Same Address
        .form-group
          label(for='currentAddress') Current Address
          textarea#currentAddress.currentAddress.form-control(name='currentAddress')
        .form-group
          label(for='password_add') Password
          input#password_add.form-control(type="password" name="password_add" placeholder="Enter Password" required)
        .form-group
          label(for='cpassword_add') Confirm Password
          input#cpassword_add.form-control(type="password" name="cpassword_add" placeholder="Confirm Password" required)
      .modal-footer
        button.btn.btn-warning(type='button' data-bs-dismiss='modal')
          | Close
        button#add_submit.btn.btn-primary(type='submit')
          | Add Employee
