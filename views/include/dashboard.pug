//Update Modal
#employeeModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title Employee Profile Update
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        .form-group
          input#id(type='hidden' name='id')
          label(for='firstname') First Name
          input#firstname.form-control(type='text' name='firstname' placeholder='First Name' required)
        .form-group
          label(for='lastname') Last Name
          input#lastname.form-control(type='text' name='lastname' placeholder='Last Name' required)
        .form-group
          label.form-label(for='email') Email address
          input#email.form-control(type='email' name='email' placeholder='name@example.com' required)
        .form-group
          label(for='phonenumber') Phone Number
          input#phonenumber.form-control(type='text' name='phonenumber' placeholder='Phone Number' required)
      .modal-footer
        button.btn.btn-warning(type='button' data-bs-dismiss='modal')
          | Close
        button#edit_submit.btn.btn-info(type='submit')
          | Update
//Add Modal
#employeeModalAdd.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel1' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5#exampleModalLabel1.modal-title Add New Employee
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        .form-group
          label(for='firstname_add') First Name
          input#firstname_add.form-control(type='text' name='firstname_add' placeholder='First Name' required)
        .form-group
          label(for='lastname_add') Last Name
          input#lastname_add.form-control(type='text' name='lastname_add' placeholder='Last Name' required)
        .form-group
          label.form-label(for='email_add') Email address
          input#email_add.form-control(type='email' name='email_add' placeholder='name@example.com' required)
        .form-group
          label(for='phonenumber_add') Phone Number
          input#phonenumber_add.form-control(type='text' name='phonenumber_add' placeholder='Phone Number' required)
        .form-group
          label(for='password_add') Password
          input#password_add.form-control(type="password" name="password_add" placeholder="Enter Password" required)
        .form-group
          label(for='cpassword_add') Confirm Password
          input#cpassword_add.form-control(type="password" name="cpassword_add" placeholder="Confirm Password" required)
      .modal-footer
        button.btn.btn-warning(type='button' data-bs-dismiss='modal')
          | Close
        button#add_submit.btn.btn-primary(type='submit')
          | Add Employee
